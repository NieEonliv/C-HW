<Page x:Class="lab5.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lab5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <Button/>
        <DataGrid x:Name="table" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Код" Binding="{Binding Code}"/>
                <DataGridTextColumn Header="Тип упаковкм" Binding="{Binding PackahingType.Title}"/>
                <DataGridTextColumn Header="Дата поставки" Binding="{Binding DateReceipt}"/>
                <DataGridTextColumn Header="Срок годности до" Binding="{Binding DateExpiry}"/>
                <DataGridTextColumn Header="Объем покупки" Binding="{Binding VolumePurchases}"/>
                <DataGridTextColumn Header="Объем продажи" Binding="{Binding VolumeSales}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
