<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Center">
            <Button Height="30" FontSize="15" Content="Книги" Click="ShowBooks_Click"/>
            <Button Height="30" FontSize="15" Content="Клиенты" Click="ShowClients_Click"/>
            <Button Height="30" FontSize="15" Content="Анализ рынка" Click="ShowAnalitik_Click"/>
            <Button Height="30" FontSize="15" Content="Подбор книг" Click="SelectionOfBooks_Click"/>
        </StackPanel>

        <Frame Grid.Column="1" x:Name="frame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
